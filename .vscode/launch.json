{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Play in Editor",
            "type": "godot-mono",
            "mode": "playInEditor",
            "request": "launch"
        },
        {
            "name": "Launch",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}"
            ]
        },
        {
            "name": "Launch (Select Scene)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "${command:SelectLaunchScene}"
            ]
        },
        {
            "name": "Launch (Editor Mode)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build-editor",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "--dev"
            ]
        },
        {
            "name": "Launch (Editor Mode 'editor.bolt')",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build-editor",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "--dev",
                "${workspaceRoot}/boltEd/editor.bolt"
            ]
        },
        {
            "name": "Launch (Hello Haxe)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "--datapath=./Tests/HelloHaxe"
            ]
        },
        {
            "name": "Launch (Ui Test)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "./Tests/UiTest/UiTest.bolt"
            ]
        },
        {
            "name": "Generate Haxe Bindings",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--script",
                "res://HaxeExternGeneratorScript.cs",
                "--no-window"
            ]
        },
        {
            "name": "Generate NSIS Script",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "godot3-mono",
            "executableArguments": [
                "--script",
                "res://NsisScriptGenerator.cs",
                "--no-window"
            ]
        },
        {
            "name": "Attach",
            "type": "godot-mono",
            "request": "attach",
            "address": "localhost",
            "port": 23685
        }
    ]
}