<?xml version="1.0" encoding="utf-8"?>
<BXML FullScreen="true">
    <Head>
    </Head>
    <Body>
        <Panel
                Name="Panel"
                AnchorTop="0"
                AnchorBottom="1"
                AnchorLeft="0"
                AnchorRight="1">
            <VBoxContainer
                    Name="VBoxContainer"
                    AnchorTop="0"
                    AnchorBottom="1"
                    AnchorLeft="0"
                    AnchorRight="1">
                <Panel
                        Name="Topbar"
                        AnchorTop="1"
                        AnchorBottom="0"
                        MarginTop="0"
                        MarginBottom="60"
                        RectMinSize="0,60">
                    <Label
                            Name="DTLabel"
                            AnchorTop="0"
                            AnchorBottom="1"
                            AnchorLeft="0"
                            AnchorRight="1"
                            MarginRight="-20"
                            MarginTop="25"
                            Align="Right"
                            VAlign="Top"
                            Text="DeltaTime : 0">
                    </Label>
                </Panel>
                <Control
                        Name="Control"
                        AnchorLeft="0"
                        AnchorRight="1"
                        SizeFlagsVertical="3">
                    <Label
                            Name="Label"
                            AnchorTop="0.5"
                            AnchorBottom="1"
                            AnchorLeft="0.5"
                            AnchorRight="1"
                            MarginTop="-75"
                            MarginBottom="0"
                            MarginLeft="-85"
                            MarginRight="0"
                            Text="You clicked me 0 times!">
                    </Label>
                    <Button
                            Name="Button"
                            AnchorTop="0.5"
                            AnchorBottom="0.5"
                            AnchorLeft="0.5"
                            AnchorRight="0.5"
                            MarginTop="-50"
                            MarginBottom="-40"
                            MarginLeft="-40"
                            MarginRight="0"
                            Align="Center"
                            VAlign="Center"
                            Text="Click me!">
                    </Button>
                </Control>
            </VBoxContainer>
        </Panel>
    </Body>
</BXML>